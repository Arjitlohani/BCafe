@using BCafe.Data
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Bislerium Cafe</a>
    
    </div>
</div>
<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3"><h5 class="text-light">Welcome <strong>@Username</strong></h5></div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="OrdersList">
                <span class="oi oi-list-rich" /> Order
            </NavLink>
        </div>
            @if (UserRole == Role.Admin)
        {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ItemsCoffee">
                        <span class="oi oi-coffee" /> Coffee
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="AddIns">
                        <span class="oi oi-coffee" /> ADD INs
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                 <NavLink class="nav-link" href="users">
                    <span class="oi oi-person" /> Users
                  </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="CustomerRecord">
                        <span class="oi oi-person" /> Customer
                    </NavLink>
                </div>

                
        
                <div class="nav-item px-3">
                <NavLink class="nav-link" href="change-password">
                    <span class="oi oi-key" /> Change Password
                </NavLink>
                </div>
                <div class="nav-item px-3">
                <NavLink class="nav-link text-danger" role="button" @onclick="LogoutHandler">
                    <span class="oi oi-account-logout" /> Logout
                </NavLink>
                </div>
        
                
        }
        else if (UserRole == Role.Staff)
        {



            <div class="nav-item px-3">
                <NavLink class="nav-link" href="ItemsCoffee">
                    <span class="oi oi-coffee" /> Coffee
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="AddIns">
                    <span class="oi oi-coffee" /> ADD INs
                </NavLink>
            </div>
        
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="change-password">
                    <span class="oi oi-key" /> Change Password
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link text-danger" role="button" @onclick="LogoutHandler">
                    <span class="oi oi-account-logout" /> Logout
                </NavLink>
            </div>
        
        }
    </nav>
 </div>
        }
@code {
    [Parameter]
    public string Username { get; set; }
    [Parameter]
    public Role UserRole { get; set; }
    [Parameter]
    public EventCallback LogoutHandler { get; set; }

    private bool _collapseNavMenu { get; set; } = true;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}
